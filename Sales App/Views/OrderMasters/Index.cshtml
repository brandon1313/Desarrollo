@model IEnumerable<Sales_App.Models.OrderMaster>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Listado de Pedidos sin despachar</h6>
        </div>
        <div class="card-body">
            <p>
                <!-- @Html.ActionLink("Create New", "Create")-->
            </p>
            <div class="table-responsive text-nowrap">
               
                <table class="table table-bordered w-auto">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateTime)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Costumers.Name)
                                @Html.DisplayFor(modelItem => item.Sellers.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                <a href="@Url.Action("Details","OrderMasters",new { id = item.OrderMasterID })" class="btn btn-info btn-icon-split" style="font-size:12px;">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-list"></i>
                                    </span>
                                    <span class="text">Detalles</span>
                                </a>
                                <a href="@Url.Action("Delete","OrderMasters",new { id = item.OrderMasterID })" class="btn btn-danger btn-icon-split" style="font-size:12px;">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Eliminar</span>
                                </a>
                                <a href="@Url.Action("Delivery","OrderMasters",new { id = item.OrderMasterID })" class="btn btn-success btn-icon-split" style="font-size:12px;">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-plane"></i>
                                    </span>
                                    <span class="text">Despachar</span>
                                </a>
                                
                            </td>
                        </tr>
                    }

                </table>
            </div>
            </div>
        </div>
    </div>
